@{
    ViewBag.Title = "Informes de Accidentes";
    ViewBag.pTitle = "Informes de Accidentes";
    ViewBag.pageTitle = "Reportes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <!--datatable css-->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" />
    <!--datatable responsive css-->
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.bootstrap.min.css" />

    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css">
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-sm-auto">
                    <div class="mb-2">
                        <label for="selectEmpresaInforme" class="form-label">Empresa</label>
                        <select class="form-control" data-choices name="selectEmpresaInforme"
                                id="selectEmpresaInforme">
                            <option value="">Seleccione empresa</option>
                            <option value="Choice 1">Empresa 1 SpA</option>
                            <option value="Choice 2">Empresa 2 SpA</option>
                            <option value="Choice 3">Empresa 3 SpA</option>
                        </select>
                    </div>
                </div>

                <div class="col-sm-auto">
                    <div class="mb-2">
                        <label for="selectTrabajadorInforme" class="form-label">Trabajador</label>
                        <select class="form-control" data-choices name="selectTrabajadorInforme"
                                id="selectTrabajadorInforme">
                            <option value="">Seleccione trabajador</option>
                            <option value="Choice 1">Trabajador 1</option>
                            <option value="Choice 2">Trabajador 2</option>
                            <option value="Choice 3">Trabajador 3</option>
                            <option value="Todos">Todos</option>
                        </select>
                    </div>
                </div>

                <div class="col-sm-auto">
                    <div class="mb-2">
                        <label for="selectAccidenteInforme" class="form-label">Tipo de Accidente</label>
                        <select class="form-control" data-choices data-choices-search-false name="selectAccidenteInforme"
                                id="selectAccidenteInforme">
                            <option value="">Seleccione accidente</option>
                            <option value="Choice 1">Accidente CTP</option>
                            <option value="Choice 2">Accidente STP</option>
                            <option value="Choice 3">Cuasi Accidente</option>
                            <option value="Choice 4">Accidente Grave</option>
                            <option value="Choice 5">Accidente Fatal</option>
                            <option value="Todos">Todos</option>
                        </select>
                    </div>
                </div>

                <div class="col-sm-auto">
                    <div class="mb-2">
                        <label class="form-label" for="selectPeriodoInforme">Periodo</label>
                        <select class="form-select" data-choices data-choices-search-false id="selectPeriodoInforme">
                            <option value="">Seleccione periodo</option>
                            <option value="1">2023</option>
                            <option value="2">2022</option>
                            <option value="3">2021</option>
                        </select>
                    </div>
                </div><!--end col-->
            </div>
        </div>

        <div class="card-footer">
            <div class="text-end">
                <button id="buscarInformeBtn" class="btn btn-primary">Buscar</button>
            </div>
        </div>
    </div>
</div>

