</div><!--end col-->

<div class="col-xxl-6">
    <div class="modal fade" id="modal-crear-mutual" tabindex="-1" aria-labelledby="modalMutualLabel">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalMutualLabel">Crear Mutual</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/Datos/InsertMutual" method="post">
                        <div class="row g-3">
                            <div class="col-xxl-6">
                                <div>
                                    <label for="crearRutMutual" class="form-label">RUT</label>
                                    <input type="text" class="form-control" id="crearRutMutual" name="crearRutMutual" placeholder="Introduzca RUT">
                                </div>
                            </div><!--end col-->
                            <div class="col-xxl-6">
                                <div>
                                    <label for="crearRazonSocial" class="form-label">Razón Social</label>
                                    <input type="text" class="form-control" id="crearRazonSocial" name="crearRazonSocial" placeholder="Introduzca razón social">
                                </div>
                            </div><!--end col-->
                            <div class="col-xxl-6">
                                <div>
                                    <label for="crearGiro" class="form-label">Giro</label>
                                    <input type="text" class="form-control" id="crearGiro" name="crearGiro" placeholder="Introduzca giro">
                                </div>
                            </div><!--end col-->
                            <div class="col-xxl-6">
                                <div>
                                    <label for="crearDirecciónMutual" class="form-label">Dirección</label>
                                    <input type="text" class="form-control" id="crearDirecciónMutual" name="crearDirecciónMutual" placeholder="Introduzca dirección">
                                </div>
                            </div><!--end col-->
                            <div class="col-xxl-6">
                                <label class="form-label" for="selectRegionMutual">Región</label>
                                <select class="form-control" data-choices name="selectRegionMutual"
                                        id="selectRegionMutual">
                                    <option value="">Seleccione región</option>
                                    @foreach (var region in Model.Regions)
                                    {
                                        <option value="@region.Name">@region.Name</option>
                                    }
                                </select>
                            </div><!--end col-->
                            <div class="col-xxl-6">
                                <label class="form-label" for="selectComunaMutual">Comuna</label>
                                <select class="form-control" name="selectComunaMutual"
                                        id="selectComunaMutual" disabled>
                                    <option value="">Seleccione comuna</option>
                                </select>
                            </div><!--end col-->
                            <div class="col-xxl-6">
                                <label class="form-label" for="selectCiudadMutual">Ciudad</label>
                                <select class="form-control" data-choices name="selectCiudadMutual"
                                        id="selectCiudadMutual">
                                    <option value="">Seleccione ciudad</option>
                                    <option value="Choice 1">Las Condes</option>
                                    <option value="Choice 2">Concepción</option>
                                    <option value="Choice 3">Puerto Varas</option>
                                </select>
                            </div><!--end col-->
                            <div class="col-xxl-6">
                                <div>
                                    <label for="crearTeléfonoMutual" class="form-label">Teléfono</label>
                                    <input type="text" class="form-control" id="crearTelefonoMutual" name="crearTelefonoMutual" placeholder="Introduzca teléfono">
                                </div>
                            </div><!--end col-->
                            <div class="col-lg-12">
                                <div class="hstack gap-2 justify-content-end">
                                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cerrar</button>
                                    <button type="submit" class="btn btn-primary">Crear</button>
                                </div>
                            </div><!--end col-->
                        </div><!--end row-->
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

    <!-- multi.js -->
    <script src="~/assets/libs/multi.js/multi.min.js"></script>
    <!-- autocomplete js -->
    <script src="~/assets/libs/@@tarekraafat/autocomplete.js/autoComplete.min.js"></script>

    <!-- init js -->
    <script src="~/assets/js/pages/form-advanced.init.js"></script>
    <!-- input spin init -->
    <script src="~/assets/js/pages/form-input-spin.init.js"></script>
    <!-- input flag init -->
    <script src="~/assets/js/pages/flag-input.init.js"></script>

