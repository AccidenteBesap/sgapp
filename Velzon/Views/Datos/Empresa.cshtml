<div class="col-xxl-6">
    <div class="modal fade" id="modal-crear-empresa" tabindex="-1" aria-labelledby="modalEmpresaLabel">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalEmpresaLabel">Crear Empresa</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/Datos/InsertEmpresa" method="post">
                        <div class="row g-3">
                            <div class="col-xxl-4">
                                <div>
                                    <label for="crearNombreEmpresa" class="form-label">Empresa</label>
                                    <input type="text" class="form-control" id="crearNombreEmpresa" placeholder="Introduzca empresa">
                                </div>
                            </div><!--end col-->
                            <div class="col-xxl-4">
                                <div>
                                    <label for="crearEmpresaRut" class="form-label">RUT</label>
                                    <input type="text" class="form-control" id="crearEmpresaRut" placeholder="Introduzca RUT" name="Rut">
                                </div>
                            </div><!--end col-->
                            <div class="col-xxl-4">
                                <div>
                                    <label for="crearRazonSocialEmpresa" class="form-label">Razón Social</label>
                                    <input type="text" class="form-control" id="crearRazonSocialEmpresa" placeholder="Introduzca razón social" name="Razon_Social">
                                </div>
                            </div><!--end col-->
                            <div class="col-xxl-4">
                                <div>
                                    <label for="crearGiroEmpresa" class="form-label">Giro</label>
                                    <input type="text" class="form-control" id="crearGiroEmpresa" placeholder="Introduzca giro" name="Giro">
                                </div>
                            </div><!--end col-->
                            <div class="col-xxl-4">
                                <div>
                                    <label for="crearDirecciónEmpresa" class="form-label">Dirección</label>
                                    <input type="text" class="form-control" id="crearDirecciónEmpresa" placeholder="Introduzca dirección" name="Direccion">
                                </div>
                            </div><!--end col-->
                            <div class="col-xxl-4">
                                <div class="d-flex align-items-center">
                                    <div class="form-check form-switch form-switch-md mb-3" dir="ltr">
                                        <input type="checkbox" class="form-check-input" id="switchActivoEmpresa" name="Activo">
                                        <label class="form-check-label" for="switchActivoEmpresa">¿Activo?</label>
                                    </div>
                                </div>
                            </div><!--end col-->
                            <div class="col-xxl-4">
                                <label class="form-label" for="selectRegionEmpresa">Región</label>
                                <select class="form-control" data-choices name="Region"
                                        id="selectRegionEmpresa">
                                    <option value="">Seleccione región</option>
                                    @foreach (var region in Model.Regions)
                                    {
                                        <option value="@region.Name">@region.Name</option>
                                    }
                                </select>
                            </div><!--end col-->
                            <div class="col-xxl-4">
                                <label class="form-label" for="selectComunaEmpresa">Comuna</label>
                                <select class="form-control" name="Comuna"
                                        id="selectComunaEmpresa" disabled>
                                    <option value="">Seleccione comuna</option>
                                </select>
                            </div><!--end col-->
                            <div class="col-xxl-4">
                                <label class="form-label" for="selectCiudadEmpresa">Ciudad</label>
                                <select class="form-control" data-choices name="Ciudad"
                                        id="selectCiudadEmpresa">
                                    <option value="">Seleccione ciudad</option>
                                    <option value="Choice 1">Las Condes</option>
                                    <option value="Choice 2">Concepción</option>
                                    <option value="Choice 3">Puerto Varas</option>
                                </select>
                            </div><!--end col-->

