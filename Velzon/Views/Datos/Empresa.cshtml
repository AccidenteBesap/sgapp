                                </div>
                            </div><!--end col-->

                            <div class="col-xxl-4">
                                <div>
                                    <label for="crearRutRelegalEmpresa" class="form-label">RUT Representante Legal</label>
                                    <input type="text" class="form-control" id="crearRutRelegalEmpresa" placeholder="Introduzca rut representante" name="Rut_Representante_Legal">
                                </div>
                            </div><!--end col-->

                            <div class="col-xxl-4">
                                <div>
                                    <label for="crearNTrabajadoresEmpresa" class="form-label">Número de Trabajadores</label>
                                    <input type="number" class="form-control" id="crearNTrabajadoresEmpresa" placeholder="Introduzca número de trabajadores" name="Cantidad_Trabajadores">
                                </div>
                            </div><!--end col-->

                            <div class="col-xxl-4">
                                <label class="form-label" for="selectMutualEmpresa">Mutual</label>
                                <select class="form-control" data-choices name="MutualAndId"
                                        id="selectMutualEmpresa">
                                    <option value="">Seleccione mutual</option>
                                    @if (Model != null && Model.Mutuals != null)
                                    {
                                        @foreach (var mutual in Model.Mutuals)
                                        {
                                            <option value="@mutual.Id - @mutual.Razon_Social">@mutual.Razon_Social</option>
                                        }
                                    }
                                    else
                                    {
                                        <option value="No data available">No data available</option>
                                    }
                                </select>
                            </div><!--end col-->

                            <div class="col-xxl-4">
                                <div>
                                    <label for="responsableMutualEmpresa" class="form-label">Nombre Responsable</label>
                                    <input type="text" class="form-control" id="responsableMutualEmpresa" placeholder="Introduzca responsable" name="Nombre_Responsable">
                                </div>
                            </div><!--end col-->

                            <div class="col-xxl-4">
                                <div>
                                    <label for="rutResponsableMutualEmpresa" class="form-label">RUT Responsable</label>
                                    <input type="text" class="form-control" id="rutResponsableMutualEmpresa" placeholder="Introduzca rut" name="Rut_Representante">
                                </div>
                            </div><!--end col-->

                            <div class="col-xxl-8">
                                <label for="emailResMutualEmpresa" class="form-label">Correo Electrónico Responsable</label>
                                <input type="email" class="form-control" id="emailResMutualEmpresa" placeholder="Introduzca correo electrónico" name="Mail_Responsable">
                            </div><!--end col-->

                            <div class="col-xxl-4">
                                <div>
                                    <label for="telefonoResMutualEmpresa" class="form-label">Teléfono Responsable</label>
                                    <input type="text" class="form-control" id="telefonoResMutualEmpresa" placeholder="Introduzca teléfono" name="Telefono_Responsable">
                                </div>
                            </div><!--end col-->

                            <div class="col-lg-12">
                                <div class="hstack gap-2 justify-content-end">
                                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cerrar</button>
                                    <button type="submit" class="btn btn-primary">Crear</button>
                                </div>
                            </div><!--end col-->
                        </div><!--end row-->
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

