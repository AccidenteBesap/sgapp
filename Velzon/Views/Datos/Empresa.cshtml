    <script src="~/assets/js/pages/datatables.init.js"></script>

    <!-- App js -->
    <script src="~/assets/js/app.js"></script>

    <script>
        $(document).ready(function () {
            // Your JSON data (regions) should be available in your JavaScript
            var regions = @Html.Raw(Json.Serialize(Model.Regions));

            // Event listener for region select
            $('#selectRegionEmpresa').change(function () {
                var selectedRegion = $(this).val();
                var communeSelect = $('#selectComunaEmpresa');

                // Enable the commune select if a region is selected, disable otherwise
                communeSelect.prop('disabled', selectedRegion === '');

                // Find the region object from JSON data
                var selectedRegionData = null;
                for (var i = 0; i < regions.length; i++) {
                    if (regions[i].name === selectedRegion) {
                        selectedRegionData = regions[i];
                        break;
                    }
                }

                // Populate the commune select with associated communes
                if (selectedRegionData) {
                    var communeSelect = $('#selectComunaEmpresa');
                    communeSelect.empty();
                    communeSelect.append($('<option value="">Seleccione comuna</option>'));
                    for (var j = 0; j < selectedRegionData.communes.length; j++) {
                        var communeName = selectedRegionData.communes[j].name;
                        communeSelect.append($('<option></option>').attr('value', communeName).text(communeName));
                    }
                }
            });
        });
    </script>
