<div class="col-xxl-6">
    <div class="modal fade" id="modal-crear-filial" tabindex="-1" aria-labelledby="modalFilialLabel">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalFilialLabel">Crear Empresa Filial</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/Datos/InsertEmpresaFilial" method="post">
                        <div class="row g-3">
                            <div class="col-xxl-6">
                                <label class="form-label" for="selectEmpresaPrincipalFilial">Empresa Principal</label>
                                <select class="form-control" name="selectEmpresaPrincipalFilial"
                                        id="selectEmpresaPrincipalFilial">
                                    <option value="">Seleccione empresa</option>
                                    @if (Model != null && Model.Empresas != null)
                                    {
                                        @foreach (var mutual in Model.Empresas)
                                        {
                                            <option value="@mutual.Razon_Social" data-rut="@mutual.Rut">
                                                @mutual.Razon_Social
                                            </option>
                                        }
                                    }
                                    else
                                    {
                                        <option value="No data available">No data available</option>
                                    }
                                </select>
                            </div><!--end col-->
                            <div class="col-xxl-6">
                                <div>
                                    <label for="selectRutEmpresaPrincipalFilial" class="form-label">RUT Empresa Principal</label>
                                    <input type="text" class="form-control" id="selectRutEmpresaPrincipalFilial" placeholder="Introduzca RUT" name="Rut">
                                </div>
                            </div><!--end col-->
                            <div class="col-xxl-6">
                                <div>
                                    <label for="crearEmpresaFilial" class="form-label">Empresa Filial</label>
                                    <input type="text" class="form-control" id="crearEmpresaFilial" placeholder="Introduzca nombres" name="Razon_Social_Filial">
                                </div>
                            </div><!--end col-->
                            <div class="col-xxl-6">
                                <div>
                                    <label for="crearRutEmpresaFilial" class="form-label">RUT Empresa Filial</label>
                                    <input type="text" class="form-control" id="crearRutEmpresaFilial" placeholder="Introduzca RUT" name="Rut_Filial">
                                </div>
                            </div><!--end col-->
                            <div class="col-xxl-6">
                                <div>
                                    <label for="crearReLegal" class="form-label">Representante Legal</label>
                                    <input type="text" class="form-control" id="crearReLegal" placeholder="Introduzca representante" name="Representante_Legal_Filial">
                                </div>
                            </div><!--end col-->
                            <div class="col-xxl-6">
                                <div>
                                    <label for="crearRutReLegal" class="form-label">RUT Representante Legal</label>
